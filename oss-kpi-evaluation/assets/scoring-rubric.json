{
  "version": "2.0",
  "description": "Machine-readable scoring criteria for OSS KPI evaluation with checklist-based qualitative metrics and confidence scoring",
  "scoring_scale": {
    "min": 1,
    "max": 5,
    "ratings": {
      "5": "Excellent",
      "4": "Good",
      "3": "Adequate",
      "2": "Concerning",
      "1": "Critical"
    }
  },
  "overall_interpretation": {
    "4.5-5.0": {
      "rating": "Excellent",
      "description": "Low risk, high quality project"
    },
    "3.5-4.4": {
      "rating": "Good",
      "description": "Healthy project with minor areas for improvement"
    },
    "2.5-3.4": {
      "rating": "Adequate",
      "description": "Acceptable but review identified areas carefully"
    },
    "1.5-2.4": {
      "rating": "Concerning",
      "description": "Significant risks, proceed with caution"
    },
    "1.0-1.4": {
      "rating": "Critical",
      "description": "Major issues, high risk adoption"
    }
  },
  "confidence_scoring": {
    "description": "Confidence score indicates reliability of metric values",
    "factors": {
      "source_verified": {
        "weight": 0.30,
        "description": "Metric value verified by independent re-fetch"
      },
      "sample_quality": {
        "weight": 0.25,
        "description": "Sample size and methodology meet requirements"
      },
      "data_freshness": {
        "weight": 0.20,
        "description": "Data collected within acceptable time window"
      },
      "cross_validated": {
        "weight": 0.15,
        "description": "Value confirmed by multiple sources"
      },
      "bounds_valid": {
        "weight": 0.10,
        "description": "Value passes logical bounds checks"
      }
    },
    "ratings": {
      "high": {"min": 0.8, "max": 1.0, "description": "High confidence - verified and validated"},
      "medium": {"min": 0.6, "max": 0.79, "description": "Medium confidence - mostly verified"},
      "low": {"min": 0.4, "max": 0.59, "description": "Low confidence - limited verification"},
      "very_low": {"min": 0.0, "max": 0.39, "description": "Very low confidence - treat with caution"}
    }
  },
  "bounds_validation": {
    "description": "Logical constraints between metrics for sanity checking",
    "rules": [
      {
        "id": "B1",
        "name": "bus_factor_upper_bound",
        "condition": "bus_factor <= contributor_count",
        "error_action": "Flag as data error, require recalculation"
      },
      {
        "id": "B2",
        "name": "contributor_fork_ratio",
        "condition": "contributor_count <= fork_count * 10",
        "error_action": "Flag for review - unusually high contributor ratio"
      },
      {
        "id": "B3",
        "name": "engagement_sample_validity",
        "condition": "if contributor_count < 5 and (issue_engagement > 90 or pr_engagement > 90) then flag",
        "error_action": "Flag as suspicious sample size - very small population"
      },
      {
        "id": "B4",
        "name": "activity_consistency",
        "condition": "if last_commit_recency > 90 and release_cadence > 6 then flag",
        "error_action": "Flag as inconsistent - releases without commits"
      },
      {
        "id": "B5",
        "name": "growth_activity_consistency",
        "condition": "if contributor_growth > 25 and last_commit_recency > 180 then flag",
        "error_action": "Flag as inconsistent - growth without recent activity"
      }
    ]
  },
  "default_weights": {
    "community_health": 0.1667,
    "maintenance": 0.1667,
    "security": 0.1667,
    "documentation": 0.1667,
    "adoption": 0.1667,
    "code_quality": 0.1667
  },
  "categories": {
    "community_health": {
      "name": "Community Health",
      "description": "Measures the contributor community's size, diversity, and engagement",
      "metrics": {
        "contributor_count": {
          "name": "Contributor Count",
          "description": "Total unique contributors with merged commits in past 12 months",
          "type": "numeric",
          "unit": "contributors",
          "thresholds": {
            "5": { "min": 100, "description": "≥100 contributors" },
            "4": { "min": 50, "max": 99, "description": "50-99 contributors" },
            "3": { "min": 20, "max": 49, "description": "20-49 contributors" },
            "2": { "min": 5, "max": 19, "description": "5-19 contributors" },
            "1": { "max": 4, "description": "<5 contributors" }
          }
        },
        "contributor_growth": {
          "name": "Contributor Growth Rate",
          "description": "Percentage change in active contributors vs previous 12 months",
          "type": "percentage",
          "unit": "percent",
          "thresholds": {
            "5": { "min": 25, "description": "≥25% growth" },
            "4": { "min": 10, "max": 24, "description": "10-24% growth" },
            "3": { "min": 0, "max": 9, "description": "0-9% growth" },
            "2": { "min": -10, "max": -1, "description": "-10% to -1% decline" },
            "1": { "max": -11, "description": "<-10% decline" }
          }
        },
        "bus_factor": {
          "name": "Bus Factor",
          "description": "Minimum contributors accounting for 50% of commits",
          "type": "numeric",
          "unit": "people",
          "thresholds": {
            "5": { "min": 5, "description": "≥5 people" },
            "4": { "exact": 4, "description": "4 people" },
            "3": { "exact": 3, "description": "3 people" },
            "2": { "exact": 2, "description": "2 people" },
            "1": { "exact": 1, "description": "1 person" }
          }
        },
        "issue_engagement": {
          "name": "Issue Engagement",
          "description": "Percentage of issues receiving maintainer response within 7 days",
          "type": "percentage",
          "unit": "percent",
          "thresholds": {
            "5": { "min": 90, "description": "≥90% response rate" },
            "4": { "min": 75, "max": 89, "description": "75-89% response rate" },
            "3": { "min": 50, "max": 74, "description": "50-74% response rate" },
            "2": { "min": 25, "max": 49, "description": "25-49% response rate" },
            "1": { "max": 24, "description": "<25% response rate" }
          }
        },
        "pr_engagement": {
          "name": "PR Engagement",
          "description": "Percentage of PRs receiving review within 7 days",
          "type": "percentage",
          "unit": "percent",
          "thresholds": {
            "5": { "min": 90, "description": "≥90% review rate" },
            "4": { "min": 75, "max": 89, "description": "75-89% review rate" },
            "3": { "min": 50, "max": 74, "description": "50-74% review rate" },
            "2": { "min": 25, "max": 49, "description": "25-49% review rate" },
            "1": { "max": 24, "description": "<25% review rate" }
          }
        }
      }
    },
    "maintenance": {
      "name": "Maintenance",
      "description": "Measures ongoing project maintenance activity",
      "metrics": {
        "commit_frequency": {
          "name": "Commit Frequency",
          "description": "Average commits per week over past 12 months",
          "type": "numeric",
          "unit": "commits/week",
          "thresholds": {
            "5": { "min": 20, "description": "≥20 commits/week" },
            "4": { "min": 10, "max": 19, "description": "10-19 commits/week" },
            "3": { "min": 3, "max": 9, "description": "3-9 commits/week" },
            "2": { "min": 1, "max": 2, "description": "1-2 commits/week" },
            "1": { "max": 0.99, "description": "<1 commit/week" }
          }
        },
        "release_cadence": {
          "name": "Release Cadence",
          "description": "Number of releases in past 12 months",
          "type": "numeric",
          "unit": "releases",
          "thresholds": {
            "5": { "min": 12, "description": "≥12 releases (monthly+)" },
            "4": { "min": 6, "max": 11, "description": "6-11 releases" },
            "3": { "min": 3, "max": 5, "description": "3-5 releases" },
            "2": { "min": 1, "max": 2, "description": "1-2 releases" },
            "1": { "exact": 0, "description": "0 releases" }
          }
        },
        "issue_resolution_time": {
          "name": "Issue Resolution Time",
          "description": "Median days to close issues (past 6 months)",
          "type": "numeric",
          "unit": "days",
          "inverse": true,
          "thresholds": {
            "5": { "max": 7, "description": "≤7 days median" },
            "4": { "min": 8, "max": 14, "description": "8-14 days median" },
            "3": { "min": 15, "max": 30, "description": "15-30 days median" },
            "2": { "min": 31, "max": 90, "description": "31-90 days median" },
            "1": { "min": 91, "description": ">90 days median" }
          }
        },
        "pr_merge_time": {
          "name": "PR Merge Time",
          "description": "Median days to merge PRs (past 6 months)",
          "type": "numeric",
          "unit": "days",
          "inverse": true,
          "thresholds": {
            "5": { "max": 3, "description": "≤3 days median" },
            "4": { "min": 4, "max": 7, "description": "4-7 days median" },
            "3": { "min": 8, "max": 14, "description": "8-14 days median" },
            "2": { "min": 15, "max": 30, "description": "15-30 days median" },
            "1": { "min": 31, "description": ">30 days median" }
          }
        },
        "last_commit_recency": {
          "name": "Last Commit Recency",
          "description": "Days since most recent commit to default branch",
          "type": "numeric",
          "unit": "days",
          "inverse": true,
          "thresholds": {
            "5": { "max": 7, "description": "≤7 days ago" },
            "4": { "min": 8, "max": 30, "description": "8-30 days ago" },
            "3": { "min": 31, "max": 90, "description": "31-90 days ago" },
            "2": { "min": 91, "max": 180, "description": "91-180 days ago" },
            "1": { "min": 181, "description": ">180 days ago" }
          }
        }
      }
    },
    "security": {
      "name": "Security",
      "description": "Measures security posture and practices",
      "metrics": {
        "security_policy": {
          "name": "Security Policy",
          "description": "Presence and completeness of SECURITY.md",
          "type": "checklist",
          "checklist_items": [
            {"id": "has_security_md", "description": "SECURITY.md file exists", "weight": 1.5},
            {"id": "has_disclosure_process", "description": "Clear vulnerability reporting process", "weight": 1.5},
            {"id": "has_response_timeline", "description": "Expected response time documented", "weight": 1.0},
            {"id": "has_pgp_key", "description": "PGP key or secure contact method provided", "weight": 0.5},
            {"id": "has_scope_definition", "description": "Security scope defined (what's covered)", "weight": 0.5},
            {"id": "has_bug_bounty_reference", "description": "Bug bounty program referenced", "weight": 0.5}
          ],
          "max_score": 5.5,
          "scoring": {
            "5": {"min": 5.0, "description": "≥5.0 weighted items present"},
            "4": {"min": 4.0, "max": 4.9, "description": "4.0-4.9 weighted items present"},
            "3": {"min": 2.5, "max": 3.9, "description": "2.5-3.9 weighted items present"},
            "2": {"min": 1.0, "max": 2.4, "description": "1.0-2.4 weighted items present"},
            "1": {"max": 0.9, "description": "<1.0 weighted items present"}
          }
        },
        "vulnerability_disclosure": {
          "name": "Vulnerability Disclosure",
          "description": "Evidence of responsible vulnerability handling",
          "type": "qualitative",
          "thresholds": {
            "5": { "criteria": "Active advisory usage, published CVEs with fixes, coordinated disclosure" },
            "4": { "criteria": "Security advisories enabled, some historical CVE responses" },
            "3": { "criteria": "Ad-hoc security issue handling via issues" },
            "2": { "criteria": "Slow or incomplete vulnerability responses" },
            "1": { "criteria": "No evidence of security issue handling" }
          }
        },
        "dependency_status": {
          "name": "Dependency Status",
          "description": "Open dependency vulnerability alerts",
          "type": "numeric",
          "unit": "alerts",
          "inverse": true,
          "thresholds": {
            "5": { "exact": 0, "criteria": "0 open alerts, Dependabot enabled" },
            "4": { "min": 1, "max": 2, "criteria": "1-2 low-severity open alerts" },
            "3": { "min": 3, "max": 5, "criteria": "3-5 open alerts or 1 high-severity" },
            "2": { "min": 6, "max": 10, "criteria": "6-10 open alerts or 2+ high-severity" },
            "1": { "min": 11, "criteria": ">10 open alerts or critical vulnerabilities" }
          }
        },
        "security_audit": {
          "name": "Security Audit",
          "description": "Evidence of third-party security audits",
          "type": "qualitative",
          "thresholds": {
            "5": { "criteria": "Recent (<2 years) public audit with issues resolved" },
            "4": { "criteria": "Public audit >2 years old or partial audit recent" },
            "3": { "criteria": "Internal security review documented" },
            "2": { "criteria": "Security practices mentioned but no formal audit" },
            "1": { "criteria": "No evidence of security audits" }
          }
        },
        "signed_releases": {
          "name": "Signed Releases",
          "description": "Cryptographic signing of releases or commits",
          "type": "qualitative",
          "thresholds": {
            "5": { "criteria": "All releases signed, SLSA provenance, reproducible builds" },
            "4": { "criteria": "All releases signed with GPG/Sigstore" },
            "3": { "criteria": "Some releases signed or signed commits" },
            "2": { "criteria": "Unsigned releases but checksums provided" },
            "1": { "criteria": "No signing or integrity verification" }
          }
        }
      }
    },
    "documentation": {
      "name": "Documentation",
      "description": "Measures documentation quality and completeness",
      "metrics": {
        "readme_completeness": {
          "name": "README Completeness",
          "description": "Presence of key README sections",
          "type": "checklist",
          "checklist_items": [
            {"id": "has_description", "description": "Project description/overview", "weight": 1.0},
            {"id": "has_installation", "description": "Installation instructions", "weight": 1.0},
            {"id": "has_usage", "description": "Basic usage examples", "weight": 1.0},
            {"id": "has_contributing_section", "description": "Contributing section or link", "weight": 1.0},
            {"id": "has_license_section", "description": "License information", "weight": 1.0},
            {"id": "has_badges", "description": "Status badges (CI, coverage, version)", "weight": 0.5},
            {"id": "has_code_examples", "description": "Code examples/snippets", "weight": 0.5},
            {"id": "has_visuals", "description": "Screenshots, diagrams, or GIFs", "weight": 0.5}
          ],
          "max_score": 6.5,
          "scoring": {
            "5": {"min": 6.0, "description": "≥6.0 weighted items present"},
            "4": {"min": 5.0, "max": 5.9, "description": "5.0-5.9 weighted items present"},
            "3": {"min": 4.0, "max": 4.9, "description": "4.0-4.9 weighted items present"},
            "2": {"min": 2.0, "max": 3.9, "description": "2.0-3.9 weighted items present"},
            "1": {"max": 1.9, "description": "<2.0 weighted items present"}
          }
        },
        "api_documentation": {
          "name": "API Documentation",
          "description": "Presence and quality of API/library documentation",
          "type": "checklist",
          "checklist_items": [
            {"id": "has_docs_site", "description": "Dedicated documentation site", "weight": 1.0},
            {"id": "has_api_reference", "description": "API reference documentation", "weight": 1.5},
            {"id": "has_function_signatures", "description": "Function/method signatures documented", "weight": 1.0},
            {"id": "has_parameter_descriptions", "description": "Parameter descriptions", "weight": 1.0},
            {"id": "has_return_value_docs", "description": "Return value documentation", "weight": 1.0},
            {"id": "has_examples_in_docs", "description": "Code examples in documentation", "weight": 1.0},
            {"id": "has_search_functionality", "description": "Search functionality", "weight": 0.5}
          ],
          "max_score": 7.0,
          "scoring": {
            "5": {"min": 6.0, "description": "≥6.0 weighted items present"},
            "4": {"min": 4.5, "max": 5.9, "description": "4.5-5.9 weighted items present"},
            "3": {"min": 3.0, "max": 4.4, "description": "3.0-4.4 weighted items present"},
            "2": {"min": 1.5, "max": 2.9, "description": "1.5-2.9 weighted items present"},
            "1": {"max": 1.4, "description": "<1.5 weighted items present"}
          }
        },
        "getting_started": {
          "name": "Getting Started Guide",
          "description": "Presence of beginner-friendly onboarding documentation",
          "type": "checklist",
          "checklist_items": [
            {"id": "has_quickstart_section", "description": "Quickstart or getting started section", "weight": 1.5},
            {"id": "has_prerequisites_listed", "description": "Prerequisites/requirements listed", "weight": 1.0},
            {"id": "has_step_by_step_guide", "description": "Step-by-step installation guide", "weight": 1.0},
            {"id": "has_working_examples", "description": "Working code examples", "weight": 1.0},
            {"id": "has_expected_output", "description": "Expected output shown", "weight": 0.5},
            {"id": "has_troubleshooting", "description": "Troubleshooting section", "weight": 0.5}
          ],
          "max_score": 5.5,
          "scoring": {
            "5": {"min": 5.0, "description": "≥5.0 weighted items present"},
            "4": {"min": 4.0, "max": 4.9, "description": "4.0-4.9 weighted items present"},
            "3": {"min": 2.5, "max": 3.9, "description": "2.5-3.9 weighted items present"},
            "2": {"min": 1.5, "max": 2.4, "description": "1.5-2.4 weighted items present"},
            "1": {"max": 1.4, "description": "<1.5 weighted items present"}
          }
        },
        "changelog": {
          "name": "Changelog Maintenance",
          "description": "Presence and maintenance of changelog",
          "type": "qualitative",
          "thresholds": {
            "5": { "criteria": "Keep-a-Changelog format, up to date, all versions documented" },
            "4": { "criteria": "Regular changelog updates with recent releases" },
            "3": { "criteria": "Changelog exists but inconsistently maintained" },
            "2": { "criteria": "Release notes only (no consolidated changelog)" },
            "1": { "criteria": "No changelog" }
          }
        },
        "contributing_guide": {
          "name": "Contributing Guide",
          "description": "Presence and quality of contribution guidelines",
          "type": "checklist",
          "checklist_items": [
            {"id": "has_contributing_md", "description": "CONTRIBUTING.md file exists", "weight": 1.0},
            {"id": "has_setup_instructions", "description": "Development setup instructions", "weight": 1.0},
            {"id": "has_pr_process", "description": "PR/contribution process documented", "weight": 1.0},
            {"id": "has_code_style_guide", "description": "Code style guidelines", "weight": 1.0},
            {"id": "has_testing_instructions", "description": "Testing instructions", "weight": 1.0},
            {"id": "has_coc_reference", "description": "Code of conduct reference", "weight": 0.5},
            {"id": "has_issue_templates", "description": "Issue/PR templates", "weight": 0.5}
          ],
          "max_score": 6.0,
          "scoring": {
            "5": {"min": 5.5, "description": "≥5.5 weighted items present"},
            "4": {"min": 4.0, "max": 5.4, "description": "4.0-5.4 weighted items present"},
            "3": {"min": 2.5, "max": 3.9, "description": "2.5-3.9 weighted items present"},
            "2": {"min": 1.0, "max": 2.4, "description": "1.0-2.4 weighted items present"},
            "1": {"max": 0.9, "description": "<1.0 weighted items present"}
          }
        }
      }
    },
    "adoption": {
      "name": "Adoption",
      "description": "Measures project adoption and usage trends",
      "metrics": {
        "star_count": {
          "name": "Star Count",
          "description": "Total GitHub stars",
          "type": "numeric",
          "unit": "stars",
          "thresholds": {
            "5": { "min": 10000, "description": "≥10,000 stars" },
            "4": { "min": 1000, "max": 9999, "description": "1,000-9,999 stars" },
            "3": { "min": 100, "max": 999, "description": "100-999 stars" },
            "2": { "min": 10, "max": 99, "description": "10-99 stars" },
            "1": { "max": 9, "description": "<10 stars" }
          }
        },
        "star_trend": {
          "name": "Star Trend",
          "description": "Star growth rate over past 6 months",
          "type": "percentage",
          "unit": "percent",
          "thresholds": {
            "5": { "min": 50, "description": "≥50% growth" },
            "4": { "min": 20, "max": 49, "description": "20-49% growth" },
            "3": { "min": 5, "max": 19, "description": "5-19% growth" },
            "2": { "min": 0, "max": 4, "description": "0-4% growth (stagnant)" },
            "1": { "max": -1, "description": "Negative growth" }
          }
        },
        "fork_activity": {
          "name": "Fork Activity",
          "description": "Percentage of forks with recent activity",
          "type": "percentage",
          "unit": "percent",
          "thresholds": {
            "5": { "min": 20, "description": "≥20% active forks" },
            "4": { "min": 10, "max": 19, "description": "10-19% active forks" },
            "3": { "min": 5, "max": 9, "description": "5-9% active forks" },
            "2": { "min": 1, "max": 4, "description": "1-4% active forks" },
            "1": { "max": 0.99, "description": "<1% active forks" }
          }
        },
        "download_count": {
          "name": "Download/Install Count",
          "description": "Monthly downloads from primary package registry",
          "type": "numeric",
          "unit": "downloads/month",
          "thresholds": {
            "5": { "min": 1000000, "description": "≥1M monthly downloads" },
            "4": { "min": 100000, "max": 999999, "description": "100K-999K monthly" },
            "3": { "min": 10000, "max": 99999, "description": "10K-99K monthly" },
            "2": { "min": 1000, "max": 9999, "description": "1K-9K monthly" },
            "1": { "max": 999, "description": "<1K monthly" }
          }
        },
        "dependent_projects": {
          "name": "Dependent Projects",
          "description": "Count of public projects depending on this package",
          "type": "numeric",
          "unit": "dependents",
          "thresholds": {
            "5": { "min": 10000, "description": "≥10,000 dependents" },
            "4": { "min": 1000, "max": 9999, "description": "1,000-9,999 dependents" },
            "3": { "min": 100, "max": 999, "description": "100-999 dependents" },
            "2": { "min": 10, "max": 99, "description": "10-99 dependents" },
            "1": { "max": 9, "description": "<10 dependents" }
          }
        }
      }
    },
    "code_quality": {
      "name": "Code Quality",
      "description": "Measures code quality practices and metrics",
      "metrics": {
        "test_presence": {
          "name": "Test Presence",
          "description": "Evidence of automated tests in the repository",
          "type": "checklist",
          "checklist_items": [
            {"id": "has_test_directory", "description": "Test directory exists", "weight": 1.0},
            {"id": "has_unit_tests", "description": "Unit tests present", "weight": 1.5},
            {"id": "has_integration_tests", "description": "Integration tests present", "weight": 1.0},
            {"id": "has_e2e_tests", "description": "End-to-end tests present", "weight": 1.0},
            {"id": "has_test_in_ci", "description": "Tests run in CI", "weight": 1.0},
            {"id": "has_test_documentation", "description": "Test documentation", "weight": 0.5}
          ],
          "max_score": 6.0,
          "scoring": {
            "5": {"min": 5.5, "description": "≥5.5 weighted items present"},
            "4": {"min": 4.0, "max": 5.4, "description": "4.0-5.4 weighted items present"},
            "3": {"min": 2.5, "max": 3.9, "description": "2.5-3.9 weighted items present"},
            "2": {"min": 1.0, "max": 2.4, "description": "1.0-2.4 weighted items present"},
            "1": {"max": 0.9, "description": "<1.0 weighted items present"}
          }
        },
        "test_coverage": {
          "name": "Test Coverage",
          "description": "Code coverage percentage",
